// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Day {
  id              String   @id @default(cuid())
  dayNumber       Int      @unique
  name            String
  time            Int
  hasTheine       Boolean
  canReinfuse     Boolean
  reinfuseNumber  Int?
  moreIndications String
  addMilk         Boolean   @default(false)
  story           StoryTea?
}

model StoryTea {
  id          String    @id @default(cuid())
  dayId       Day       @relation(fields: [id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  storyPart1  String
  storyPart2  String
  storyPart3  String
  youtubeURL  String?
  onlyMusic   Boolean?
}